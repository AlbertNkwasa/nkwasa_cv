	journal = {Agricultural Water Management},
	author = {Villani, Lorenzo and Castelli, Giulio and Yimer, Estifanos Addisu and Chawanda, Celray James and Nkwasa, Albert and Van Schaeybroeck, Bert and Penna, Daniele and van Griensven, Ann and Bresci, Elena},
	month = jun,
